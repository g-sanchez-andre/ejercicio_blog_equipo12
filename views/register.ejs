<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Hack the Blog</title>

    <!-- llamado a kit de iconos de FONT AWESOME -->
    <script src="https://kit.fontawesome.com/69dcecacbf.js" crossorigin="anonymous"></script>
    <!-- FIN llamado a kit de iconos -->

    <!--llamado a BOOTSTRAP-->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="../public/css/styles.css" />
    <!--FIN llamado a BOOTSTRAP-->
  </head>

  <body>
    <!--============================== NAVBAR ==============================-->
    <%- include("partials/navbar") %>
    <!--============================== NAVBAR ==============================-->
    <div class="d-flex vh-100">
      <section class="container">
        <div class="border border-4 shadow m-5 rounded p-3 mb-3">
          <form class="container mt-4" method="POST" action="/users/registro">
          <form class="container mt-4" method="POST" action="/user/registro">
            <legend>Register new user</legend>
            <div class="form-group mb-3 d-flex align-items-center">
              <label class="me-3">Firstname</label>
              <input name="firstname" class="form-control me-3" placeholder="Enter firstname" />
              <label class="me-3">Lastname</label>
              <input name="lastname" class="form-control" placeholder="Enter firstname" />
            </div>
            <div class="form-group mb-3">
              <label for="">Firstname</label>
              <input
                type="text"
                class="form-control"
                name="firstname"
                id="firstname"
                placeholder="Write your firstname"
              />
              <label for="">Lastname</label>
              <input
                type="text"
                name="lastname"
                class="form-control"
                id="lastname"
                placeholder="Write your lastname"
              />
              <label for="exampleInputEmail1">Email address</label>
              <input
                type="email"
                class="form-control"
                name="email"
                id="email1"
                aria-describedby="emailHelp"
                placeholder="Enter email"
                name="email"
              />
            </div>
            <div class="form-group mb-3">
              <label for="exampleInputPassword1">Password</label>
              <input
                type="password"
                name="password"
                class="form-control"
                id="password"
                placeholder="Password"
                name="password"
              />
            </div>

            <button type="submit" class="btn btn-primary">Register</button>
          </form>
        </div>
      </section>
    </div>
    <!--============================== SECTION: HERO ==============================-->

    <!--============================== FOOTER ==============================-->
    <%- include("partials/footer") %>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
